<%- include('./partials/head.ejs') %>

<body>

  <!-- Header -->
  <header class="w3-display-container w3-content w3-wide" style="max-width:1500px;" id="home">
    <img class="w3-image" src="assets/images/add.jpg" alt="Architecture" width="1500" height="800">
    <div class="w3-display-middle w3-margin-top w3-center">
      <h1 class="w3-xxlarge w3-text-white"><span class="w3-padding w3-black w3-opacity-min">  <b>One Does Not Simply</b></span> <a href="/task/make_task"> <span class="w3-hide-small w3-text-light-grey" style="font-size: 35px">ADD Task</span></h1> </a>
    </div>
  </header>
  
  <!-- Page content -->
  <div class="w3-content w3-padding" style="max-width:1564px">
    <% var count = 0 %>
    <% for(i=0;i < tasks.length ; i++) { %>
        <% if(tasks[i].status == 'pending'){%>
            <% ++count %>
        <% } %>    
    <% } %>
    <!-- Project Section -->
    <div class="w3-container w3-padding-32" id="projects">
      <h3 class="w3-border-bottom w3-border-light-grey w3-padding-16">Tasks: <%= count %></h3>
    </div>


    <section id="services" class="services section-bg">
        <div class="container">
    
         
    
          <div class="row">
                
                <% for(i=0;i < tasks.length ; i++) { %>
                <div class="col-lg-4 col-md-6 d-flex align-items-stretch mt-4 mt-md-0" style="margin-bottom: 1vw;">
                    <div class="icon-box" style="height: 325px;width: 325px;">
                        <div class="icon"></div>
                        <div class="w3-display-topleft w3-black w3-padding"><%= tasks[i].task_name %></div>
                        <h6><%= tasks[i].description %> </h6>
                        <p> Status:&nbsp;<em> <%= tasks[i].status %></em> </p> <hr>
                        <%if(tasks[i].status == 'pending'){%>
                        <a href="/task/update_task?id=<%= tasks[i].id %>" style="color: rgba(19, 117, 30, 0.687);"><i class="bx bx-check"></i></a>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;  
                        <% } %>
    
    
                        <a href="/task/delete_task?id=<%= tasks[i].id %>" style="color: red;"><i class="bx bx-trash"></i></a>
                    </div>
                </div> 
                <% } %>
          </div>
    
        </div>
    </section>
 
  
  <!-- Footer -->
  <footer class="w3-center w3-black w3-padding-16">
    <p>Shrek Created By <a href="https://www.facebook.com/jasonkyle.avancena/" title="W3.CSS" target="_blank" class="w3-hover-text-green">JasonKyle Avance√±a</a></p>
  </footer>
  

</body>
</hmtl>



